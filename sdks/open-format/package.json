{
  "name": "@simpleweb/open-format",
  "version": "0.4.0",
  "repository": "https://github.com/simpleweb/open-format/tree/main/sdks/open-format",
  "author": "Benjamin Reid <ben@simpleweb.co.uk>",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/open-format.esm.js",
  "exports": {
    ".": {
      "import": "./dist/open-format.esm.js",
      "require": "./dist/index.js"
    }
  },
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "yarn node --experimental-vm-modules $(yarn bin jest) --runInBand",
    "lint": "tsdx lint",
    "prepare": "yarn run generate-contract-types && tsdx build",
    "generate-contract-types": "typechain --target ethers-v5 --out-dir src/contract-types '../../node_modules/@simpleweb/open-format-contracts/abis/*.json'",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "ethers": "^5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/open-format.cjs.production.min.js",
      "limit": "100 KB"
    },
    {
      "path": "dist/open-format.esm.js",
      "limit": "100 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "@typechain/ethers-v5": "^10.1.0",
    "@types/lodash.merge": "^4.6.7",
    "babel-jest": "^28.1.1",
    "ethers": "^5",
    "ganache": "^7.2.0",
    "husky": "^8.0.1",
    "size-limit": "^7.0.8",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typechain": "^8.1.0",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "@simpleweb/open-format-contracts": "^0.3.0",
    "graphql": "^16.5.0",
    "graphql-request": "^4.3.0",
    "lodash.merge": "^4.6.2",
    "nft.storage": "^6.4.1"
  }
}
